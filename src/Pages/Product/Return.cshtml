@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReturnModel
@{
    ViewData["Title"] = "Return page";
}
<h1>Return Form</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Info.Firstname" class="control-label">First Name:</label>
            <input type="text" asp-for="Info.Firstname" name="firstname" class="form-control" required/>
            <span asp-validation-for="Info.Firstname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Info.Lastname" class="control-label">Last Name:</label>
            <input type="text" asp-for="Info.Lastname" name="lastname" class="form-control" required/>
            <span asp-validation-for="Info.Lastname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Info.Email" class="control-label">Email:</label>
            <input type="email" asp-for="Info.Email" name="email" class="form-control" required/>
            <span asp-validation-for="Info.Email" class="text-danger"></span>
        </div>
       
        <div class="form-group">
            <input type="submit" value="Return" class="btn btn-primary standard-button" />
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}